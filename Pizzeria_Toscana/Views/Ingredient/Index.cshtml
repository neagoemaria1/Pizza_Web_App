@model IEnumerable<Pizzeria_Toscana.Models.Ingredient>

@{
    ViewData["Title"] = "Gestionare Ingrediente";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/ingredientCRUD.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="icon" type="image/svg+xml" href="https://unpkg.com/boxicons@2.1.4/svg/solid/bxs-folder-open.svg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body class="ingrediente-body">

    <header class="header-nav">
        <nav class="navbar">
            <div class="nav-left">
                <a asp-page="/Index" class="logo">
                    <img src="~/imagini/LogoToscana.png" alt="Logo Pizzeria Toscana">
                </a>
                <a href="@Url.Action("Index", "Meniu")"><i class='bx bxs-food-menu'></i>Meniu</a>
                <a href="@Url.Action("Index", "Cos")"><i class="fa fa-shopping-cart"></i>Cos</a>
                <a href="@Url.Action("Index", "IstoricComenzi")"><i class="fa fa-history"></i>Istoric Comenzi</a>
                <a href="@Url.Action("Index", "Admin")"><i class="fa fa-pizza-slice"></i>Gestionare Produse</a>
                <a href="@Url.Action("Index", "RaportVanzari")"><i class="fas fa-receipt"></i>Raport Vânzări</a>
                <a href="@Url.Page("/Account/Manage/Index", new { area = "Identity" })"><i class="bx bx-cog"></i>Setări</a>
            </div>
        </nav>

        <div>
            <partial name="_LoginPartial" />
        </div>
    </header>

    <div class="container">
        <h1 class="text-center mb-4">Gestionare Ingrediente</h1>

        <div class="d-flex justify-content-center gap-3">
            <a asp-action="Create" class="btn btn-success btn-lg btn-adauga-ingredient">
                <i class="fas fa-plus-circle"></i> Adaugă Ingredient
            </a>
        </div>
        <table class="table table-bordered table-hover table-ingrediente" style="width: 40%; margin: auto;">

            <thead class="table-dark">
                <tr>
                    <th style="text-align: center; padding: 12px;">Denumire</th>
                    <th style="text-align: center; padding: 12px;">Acțiuni</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align: center; padding: 12px;">@item.Denumire</td>
                            <td style="text-align: center; padding: 12px;">
                                <form asp-action="Delete" asp-route-id="@item.COD_Ingredient" method="post">
                                    <button type="submit" class="btn btn-danger btn-sm btn-delete-ingredient">
                                        <i class="fas fa-trash-alt"></i> Șterge
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center" style="padding: 15px; font-style: italic;">Nu există ingrediente disponibile.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</body>
</html>
