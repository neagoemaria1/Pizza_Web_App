@{
    ViewData["Title"] = "Asociere Ingrediente";
    Layout = null;
}

@{
    var produsAsociere = ViewBag.ProdusAsociere as Pizzeria_Toscana.Models.Produs;
    var asocieriCurente = ViewBag.AsocieriCurente as IEnumerable<dynamic>;
    var toateIngredientele = ViewBag.ToateIngredientele as IEnumerable<Pizzeria_Toscana.Models.Ingredient>;
    var errorMessage = ViewBag.ErrorMessage as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/CreateProdus.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/atisawd/boxicons@2.0.7/css/boxicons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="icon" type="image/svg+xml" href="https://unpkg.com/boxicons@2.1.4/svg/solid/bxs-folder-open.svg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body class="body-create">
    <header class="header-nav">
        <nav class="navbar">
            <div class="nav-left">
                <a asp-page="/Index" class="logo">
                    <img src="~/imagini/LogoToscana.png" alt="Logo Pizzeria Toscana" />
                </a>
                <a href="@Url.Action("Index","Meniu")"><i class="bx bxs-food-menu"></i>Meniu</a>
                <a href="@Url.Action("Index","Cos")"><i class="fa fa-shopping-cart"></i>Cos</a>
                <a href="@Url.Action("Index","IstoricComenzi")"><i class="fa fa-history"></i>Istoric Comenzi</a>
                <a href="@Url.Action("Index","Admin")"><i class="fa fa-leaf"></i>Gestionare Produse</a>
                <a href="@Url.Page("/Account/Manage/Index", new { area = "Identity" })"><i class="bx bx-cog"></i>Setari</a>
            </div>
        </nav>
        <div>
            <partial name="_LoginPartial" />
        </div>
    </header>

    <div class="container mt-6 p-4 bg-white shadow rounded" style="max-width: 600px;">
        <h1 class="text-center my-4">Asociere Ingrediente la Produs</h1>

        @if (produsAsociere != null)
        {
            <h3 class="text-center text-primary">Produs: @produsAsociere.Denumire</h3>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger text-center">@errorMessage</div>
        }

        <hr />

        <h4 class="mb-3">Ingrediente asociate:</h4>
        @if (asocieriCurente != null && asocieriCurente.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-bordered text-center bg-white">
                    <thead class="table-dark">
                        <tr>
                            <th>Ingredient</th>
                            <th>Cantitate</th>
                            <th>Acțiune</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var asociere in asocieriCurente)
                        {
                            <tr>
                                <td>@asociere.IngredientName</td>
                                <td>@asociere.Cantitate</td>
                                <td>
                                    <form method="post" asp-action="UnlinkIngredient" asp-controller="Admin">
                                        <input type="hidden" name="codProdus" value="@produsAsociere?.COD_Produs" />
                                        <input type="hidden" name="codIngredient" value="@asociere.COD_Ingredient" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash-alt"></i> Elimină
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted text-center">Nu există încă asocieri pentru acest produs.</p>
        }

        <hr />

        <h4 class="mb-3">Adaugă Ingredient</h4>
        <form method="post" asp-action="LinkIngredient" asp-controller="Admin">
            <input type="hidden" name="codProdus" value="@produsAsociere?.COD_Produs" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Selectează ingredient</label>
                    <select name="codIngredient" class="form-select">
                        @if (toateIngredientele != null)
                        {
                            foreach (var ing in toateIngredientele)
                            {
                                <option value="@ing.COD_Ingredient">@ing.Denumire</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Cantitate</label>
                    <input type="text" class="form-control" name="cantitate" placeholder="Ex: 100 grame, 1 buc, 250 ml" />
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Adaugă Ingredient
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Înapoi la listă
                </a>
            </div>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</body>
</html>
