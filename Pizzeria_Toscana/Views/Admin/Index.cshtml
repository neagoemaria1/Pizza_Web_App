@model IEnumerable<Pizzeria_Toscana.Models.Produs>
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/CreateProdus.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/atisawd/boxicons@2.0.7/css/boxicons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="icon" type="image/svg+xml" href="https://unpkg.com/boxicons@2.1.4/svg/solid/bxs-folder-open.svg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body class="body-create">
    <header class="header-nav">
        <nav class="navbar">
            <div class="nav-left">
                <a asp-page="/Index" class="logo">
                    <img src="~/imagini/LogoToscana.png" alt="Logo Pizzeria Toscana">
                </a>
               
                <a href="@Url.Action("Index", "Meniu")"><i class='bx bxs-food-menu'></i>Meniu</a>
                <a href="@Url.Action("Index", "Cos")"><i class="fa fa-shopping-cart"></i>Cos</a>
                <a href="@Url.Action("Index", "IstoricComenzi")"><i class="fa fa-history"></i>IstoricComenzi</a>
                <a href="@Url.Action("Index", "Ingredient")"><i class="fa fa-leaf"></i>Gestionare Ingrediente</a>
                <a href="@Url.Action("Index","RaportVanzari")"><i class="fas fa-receipt"></i>RaportVânzări</a>
                <a href="@Url.Page("/Account/Manage/Index", new { area = "Identity" })"><i class="bx bx-cog"></i>Setari</a>
            </div>
        </nav>
        <div class="">
            <partial name="_LoginPartial" />
        </div>
    </header>

    <div class="container">
        <h1 class="text-center mb-4">Gestionare Produse</h1>

        <div class="d-flex justify-content-center gap-3">
            <a href="@Url.Action("CreateProdus", "Admin")" class="btn btn-success btn-lg">
                <i class="fas fa-plus-circle"></i> Adauga Produs
            </a>

            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Imagine</th>
                        <th>Denumire</th>
                        <th>Descriere</th>
                        <th>Pret</th>
                        <th>Tip</th>
                        <th>Actiune</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var produs in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @if (produs.ProdusPicture != null)
                                    {
                                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(produs.ProdusPicture)" alt="Imagine Produs" class="img-thumbnail" style="max-width: 100px;" />
                                    }
                                    else
                                    {
                                        <span>Fără imagine</span>
                                    }
                                </td>
                                <td>@produs.Denumire</td>
                                <td>@produs.Descriere</td>
                                <td>@produs.Pret Lei</td>
                                <td>
                                    @if (produs.ID_Categorie == 1)
                                    {
                                        @:Vegana
                                    }
                                    else if (produs.ID_Categorie == 2)
                                    {
                                        @:Non-Vegana
                                    }
                                    else
                                    {
                                        <span class="text-danger">Necunoscut</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("EditProdus", "Admin", new { id = produs.COD_Produs })" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i> Editeaza
                                    </a>
                                    <a href="@Url.Action("DeleteProdus", "Admin", new { id = produs.COD_Produs })" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Șterge
                                    </a>
                                    <a href="@Url.Action("LinkIngredient", "Admin", new { id = produs.COD_Produs })"
                                       class="btn btn-info btn-sm">
                                        <i class="fas fa-utensils"></i> Asociere
                                    </a>


                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">Nu există produse disponibile.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</body>
</html>
