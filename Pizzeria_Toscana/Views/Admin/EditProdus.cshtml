@model Pizzeria_Toscana.Models.Produs

@{
    ViewData["Title"] = "EditProdus";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/EditProdus.css">
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/atisawd/boxicons@2.0.7/css/boxicons.min.css">
    <link rel="icon" type="image/svg+xml" href="https://unpkg.com/boxicons@2.1.4/svg/solid/bxs-edit.svg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body class="edit-body">

    <header class="header-nav">
        <nav class="navbar">
            <div class="nav-left">
                <a href="@Url.Action("Index", "Home")" class="logo">
                    <img src="~/imagini/LogoToscana.png" alt="Logo Pizzeria Toscana">
                </a>
               
                <a href="@Url.Action("Index", "Meniu")"><i class='bx bxs-food-menu'></i>Meniu</a>
                <a href="@Url.Action("Index", "Cos")"><i class="fa fa-shopping-cart"></i>Cos</a>
                <a href="@Url.Action("Index", "IstoricComenzi")"><i class="fa fa-history"></i>IstoricComenzi</a>
                <a href="@Url.Page("/Account/Manage/Index", new { area = "Identity" })"><i class="bx bx-cog"></i>Setari</a>
            </div>
        </nav>
        <div>
            <partial name="_LoginPartial" />
        </div>
    </header>

    <main class="edit-produs-container">
        <div class="edit-produs-form">
            <h1 class="text-center mb-4">Editeaza Produs</h1>

            <form asp-action="EditProdus" method="post" enctype="multipart/form-data">
                <input asp-for="COD_Produs" type="hidden" />

                <div class="form-group mb-3">
                    <label for="Denumire" class="form-label">Denumire:</label>
                    <input asp-for="Denumire" class="form-control" placeholder="Introdu denumirea produsului" />
                    <span asp-validation-for="Denumire" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Pret" class="form-label">Preț:</label>
                    <input asp-for="Pret" type="number" class="form-control" placeholder="Introdu prețul" />
                    <span asp-validation-for="Pret" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="ID_Categorie" class="form-label">Categorie:</label>
                    <select asp-for="ID_Categorie" asp-items="ViewBag.Categorii" class="form-control"></select>
                    <span asp-validation-for="ID_Categorie" class="text-danger"></span>
                </div>

                <!-- Câmp pentru Descriere -->
                <div class="form-group mb-3">
                    <label for="Descriere" class="form-label">Descriere:</label>
                    <textarea asp-for="Descriere" class="form-control" style="height: 100px; resize: none;" placeholder="Introdu descrierea produsului"></textarea>
                    <span asp-validation-for="Descriere" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label for="ProdusPicture" class="form-label">Schimbă imaginea:</label>
                    <input type="file" name="ProdusPicture" class="form-control" />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Salvează</button>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Anulează</a>
                </div>
            </form>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
