@{
    ViewData["Title"] = "Plata efectuata cu succes!";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="icon" type="image/svg+xml" href="https://unpkg.com/boxicons@2.1.4/svg/solid/bxs-check-circle.svg">

    <link rel="stylesheet" href="~/css/success.css">
</head>
<body>
    <div class="container text-center">
        <img src="~/imagini/success.png" alt="Succes" class="success-image">

        <h1>Plata a fost efectuata cu succes!</h1>
        <p>Multumim pentru comanda ta!</p>
        <p>Produsele vor fi livrate in curand.</p>
        <a href="@Url.Action("Index", "Meniu")" class="btn btn-custom">Inapoi la Meniu</a>
    </div>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>
